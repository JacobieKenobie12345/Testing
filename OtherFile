<!DOCTYPE html>
<html>
<head>
	<title>My Simple Game</title>
	<style>
		/* Add CSS styles here */
	</style>
</head>
<body>
	<h1>My Simple Game</h1>
	<p>Click the button as many times as you can in 10 seconds:</p>
	<button id="clicker" onclick="addScore()">Click Me!</button>
	<p id="score">Score: 0</p>

	<script>
		// Add JavaScript code here
		var score = 0;
		var timeLeft = 10;

		function addScore() {
			score++;
			document.getElementById("score").innerHTML = "Score: " + score;
		}

		function countdown() {
			timeLeft--;
			if (timeLeft <= 0) {
				clearInterval(timer);
				document.getElementById("clicker").disabled = true;
			}
		}

		var timer = setInterval(countdown, 1000);
	</script>
</body>
</html>
